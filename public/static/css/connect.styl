body
    margin 0px
    font-size 14px
    background #f6f6f6

.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    width 500px
    padding: 15px
    position absolute
    .btn-success
        background-color #e85722
        border 0px
        width 100% 
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .footer
        text-align center
        a
            display inline-block
            font-size .8em
            text-decoration none
            &:last-child
                margin-left 24px


.email, .pass
    height 2rem
    display flex
    justify-content center
    align-items center

.mtop16
    margin: 16px 0 0 0

.box_login
        left calc(50% - 250px)
        top calc(50% - 121px)

