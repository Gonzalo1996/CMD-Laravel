h2,h3,h4,h5,ul,body,html
  margin 0
  padding 0

body
  font-size 14px
  bacground-color #f5f6fa

.wrapper
  min-height 100vh
  overflow hidden
  .col1
    float left
    position relative
    z-index 999
    width 17%
    bacground red
  .col2
    float left 
    width 83%


.sidebar
  bacground-color #ffff
  min-height 100vh
  .section-top
    background-color #2caaff
    box-shadow 0 .5rem 1rem rgba(0, 0, 0, 0.15)
  .logo
    display block
    margin 0px auto
    padding-top 24px
    width 60%
  .user
    color #ffff !important
    padding 16px
    a
      color #fff
      font-size 1.2em

  .main
    ul
      li
        margin-top 9px
        margin-left 9px
        a 
          color #8998AC
          display block
          font-size 1.1em
          padding 12px 12px
          text-decoration none
          i
            margin-right 6px
          &:hover
            background #2caaff
            color #fff

.navbar
  background #2caaff
  a
    color #fff !important
  
.page
  padding-top 16px
  padding-bottom 16px
  .breadcrumb
    background-color #fff
    box-shadow 0 .5rem 1rem rgba(0, 0, 0, 0.10) !important
    .breadcrumb-item
      a
        &:hover
          text-decoration none !important
  .panel
    bacground #fff
    border-radius 6px
    border-bottom 2px solid #2caaff
    width 100%
    .header
      border-bottom 1px solid #e8e8e8
      h2.title  
        display inline-block
        color #19213d
        font-size 1.1em
        padding 12px 16px
    .inside
      padding 16px



